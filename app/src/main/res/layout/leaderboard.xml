<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameTesting"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/leaderboard"
        android:src="@drawable/leaderboard1"
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/leaderboard_text"
        android:src="@drawable/leaderboard_text"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="350dp"
        android:layout_height="50dp"  />

    <RelativeLayout
        android:id="@+id/player_name_container"
        android:layout_width="170dp"
        android:layout_height="482dp"
        android:layout_marginTop="120dp"
        android:layout_alignLeft="@id/leaderboard"
        android:orientation="vertical">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/player_score_container"
        android:layout_width="170dp"
        android:layout_height="482dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="100dp"
        android:layout_alignRight="@id/leaderboard"
        android:orientation="vertical">
    </RelativeLayout>

    <TextView
        android:id="@+id/difficultyLeaderboard"
        android:text="Difficulty: Easy"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:layout_below="@id/leaderboard"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="60dp" />

</RelativeLayout>