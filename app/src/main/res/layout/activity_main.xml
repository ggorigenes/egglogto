<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameTesting"
    android:background="@drawable/bg"
    android:clickable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title" />

    <TextView
        android:id="@+id/welcome"
        android:text="WELCOME!!"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:layout_below="@id/title"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="220dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/text"
        android:text="Guest"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:background="@drawable/bg_text"
        android:layout_below="@id/welcome"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="50dp" />

    <ImageButton
        android:id="@+id/startUp"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/start_up" />

<!--    <ImageView-->
<!--        android:id="@+id/startDown"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="85dp"-->
<!--        android:layout_below="@id/text"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:background="@android:color/transparent"-->
<!--        android:scaleType="fitCenter"-->
<!--        app:srcCompat="@drawable/start_down" />-->

    <ImageButton
        android:id="@+id/modesUp"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_below="@id/startUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:visibility="visible"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/modes_up" />

<!--    <ImageView-->
<!--        android:id="@+id/modesDown"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="85dp"-->
<!--        android:layout_below="@id/startUp"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:background="@android:color/transparent"-->
<!--        android:visibility="gone"-->
<!--        android:scaleType="fitCenter"-->
<!--        app:srcCompat="@drawable/modes_down" />-->


    <ImageButton
        android:id="@+id/leaderboard_button"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_below="@id/modesUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/leaderboard_up" />

    <TextView
        android:id="@+id/difficultyDisplay"
        android:text="Difficulty: Easy"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="@font/minecraft"
        android:gravity="center"
        android:layout_below="@id/leaderboard_button"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="60dp" />

    <ImageView
        android:id="@+id/companyName"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/difficultyDisplay"
        android:layout_below="@id/leaderboard_button"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/company" />

    <ImageView
        android:id="@+id/on"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:layout_toLeftOf="@id/difficultyDisplay"
        android:layout_below="@id/leaderboard_button"
        android:visibility="visible"
        app:srcCompat="@drawable/on" />

    <ImageView
        android:id="@+id/off"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        android:layout_toLeftOf="@id/difficultyDisplay"
        android:layout_below="@id/leaderboard_button"
        android:visibility="gone"
        app:srcCompat="@drawable/off" />


</RelativeLayout>