<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameTesting"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/difficultyDisplay"
        android:text="Difficulty: Easy"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/minecraft"
        android:textAlignment="center"
        android:layout_below="@id/modes"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="50dp" />

    <ImageView
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/title" />

    <ImageView
        android:id="@+id/companyName"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_toEndOf="@id/modes"
        android:layout_below="@id/difficultyDisplay"
        android:layout_marginLeft="-2dp"
        android:src="@drawable/company" />

    <ImageButton
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-200dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/start" />

    <ImageButton
        android:id="@+id/modes"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@id/start"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-120dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/modes" />

    <ImageView
        android:id="@+id/on"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/difficultyDisplay"
        android:visibility="visible"
        app:srcCompat="@drawable/on" />

    <ImageView
        android:id="@+id/off"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/modes"
        android:layout_marginTop="80dp"
        android:visibility="gone"
        app:srcCompat="@drawable/off" />


</RelativeLayout>